<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, id: :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, id: :password_confirmation %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :name %>
  </div>
  <%= form.fields_for :profile do |b| %>
    <div class="field">
      <%= b.label :address %>
      <%= b.text_area :address %>
    </div>

    <div class="field">
      <%= b.label :street %>
      <%= b.text_field :street %>
    </div>

    <div class="field">
      <%= b.label :city %>
      <%= b.text_field :city %>
    </div>

    <div class="field">
      <%= b.label :state %>
      <%= b.text_field :state %>
    </div>

    <div class="field">
      <%= b.label :country %>
      <%= b.text_field :country %>
    </div>

    <div class="field">
      <%= b.label :zipcode %>
      <%= b.number_field :zipcode %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
